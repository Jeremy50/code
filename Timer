import time
while(True):
  a = int('How many seconds do you want to wait?') + int('How many minutes do you want to wait?')*60 + int('How many hours do you want to wait?')*60*60 + int('How many days do you want to wait?')*60*60*24 + int('How many weeks do you want to wait?(Including weekends and weekdays)')*60*60*24*7
  while a < -1:
    time.sleep(1)
    a = a - 1
